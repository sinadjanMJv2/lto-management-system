<!-- Your existing calendar code -->
<template id="TransactionOptionTemplate">
  <option value=""></option>
</template>
<!-- Modal (placed at bottom) -->
<div class="modal fade" id="modalAppointmentCreate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-body d-flex justify-content-center">
          <h5 class="modal-title" id="exampleModalLabel">Appoint Date</h5>
    
        </div>
        <button type="button" id="modalTransactionCreateClose" class="btn-close btn-light" data-bs-dismiss="modal"
          aria-label="Close"></button>
      </div>

      <div class="modal-body TransactionCreate d-flex justify-content-center">
        <div style="width: 365px;">
          <form id="createAppointmentForm">
            <div class="form-group">
                 
              <h5 class="modal-title" id="exampleModalLabel">Selected Date: <span class="chosen-date"></span></h5>
             <br>

              <div class="form-group">
                 <label name="" class="control-label">Appointment</label>
                <select id="appSelect" name="TransactionId" class="form-select"></select>
            </div>

             <div class="form-group">
  <label class="control-label">Gmail Account</label>
  <input type="text"  name="Gmail" id="Gmail" placeholder="Enter Gmail Account"
    class="form-control" required />
    
  <small class="text-danger"> <i class="bi bi-info-circle-fill me-1"></i>Palihug paggamit og sakto nga Gmail kay kani nga referrence para mahatagan kag PRIOPRITY number, Salamat</small>
</div>

              <div class="form-group">
              <label name="" class="control-label">First Name</label>
              <input type="text" name="Firstname" id="Firstname" placeholder="Enter your First Name"
                class="form-control" required />
            </div>

           <div class="form-group">
              <label name="" class="control-label">Middle Name</label>
              <input type="text" name="Middlename" id="Middlename" placeholder="Enter your Middle Name"
                class="form-control" required />
            </div>

               <div class="form-group">
              <label name="" class="control-label">Last Name</label>
              <input type="text" name="Lastname" id="Lastname" placeholder="Enter your Last Name"
                class="form-control" required />
            </div>

               <div class="form-group">
              <label name="" class="control-label">Age</label>
              <input type="number" name="Age" id="Age" placeholder="Enter you Age"
                class="form-control" min="17" required />
            </div>

               @* <div class="form-group">
              <label name="" class="control-label">Valid ID</label>
            <input type="file" name="ValidID" id="inputValidID" accept=".png,.jpg,.jpeg,.svg" class="form-control" />
            </div> *@





            </div>
          </form>
        </div>
      </div>

      <div class="modal-footer">
        <div class="modal-body d-flex justify-content-center">
          <button type="button" class="btn btn-primary" id="createAppointment">Booked an Appointment</button>
        </div>
      </div>
    </div>
  </div>
</div>
